// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false // set this to true to hide the "out" folder with the compiled JS files
    },
    "search.exclude": {
        "out": true // set this to false to include "out" folder in search results
    },
    "typescript.tsdk": "./node_modules/typescript/lib",
    "mocha.files.glob": "./test/**/*test.ts",
    "mocha.requires": ["ts-node/register"],
    "mocha.options": {
        "compilers": "ts-node/register"
    },
    "coverage-gutters.highlightdark": "rgba(45, 121, 10, 0.15)",
    "coverage-gutters.highlightlight": "rgba(166, 220, 142, 0.15)",
    "coverage-gutters.noHighlightDark": "rgba(121, 31, 10, 0.15)",
    "coverage-gutters.noHighlightLight": "rgba(220, 143, 143, 0.15)",
    "coverage-gutters.partialHighlightDark": "rgba(121, 86, 10, 0.15)",
    "coverage-gutters.partialHighlightLight": "rgba(220, 213, 143, 0.15)",
    "coverage-gutters.showLineCoverage": true,
    "coverage-gutters.showRulerCoverage": true,
    "sonarlint.connectedMode.project": {
        "projectKey": "evilz_vscode-reveal",
        "serverId": "evilz-github"
    },
    "tslint.autoFixOnSave": true,
}
